<!--Content-->
<div class="loginContainer">
	<div class="profile">
		<button class="profile__avatar" id="toggleProfile">
			<img id="logoImg" src="images/loginLogo.png" alt="Avatar" />
		</button>
		<div class="profile__form">
			<!--login fields--->
			<div class="profile__fields">
				<form action="/x/login" method="post">
				<div class="field">
					<input type="text" id="fieldUser" name="username" class="input" required pattern=.*\S.* />
					<label for="fieldUser" class="label">Username</label>
				</div>
				<div class="field">
					<input type="password" id="fieldPassword"  name="password" class="input" required pattern=.*\S.* />
					<label for="fieldPassword" class="label">Password</label>
				</div>
				<div class="field">
					<input type="submit" name="Submit">
				</div>
				</form>
			</div>v
			<!--end of login fields--->

			<!--start of register-->
			<div class="registerForm">
				<div class="field">
					<input type="text" id="fieldUser" class="input" required pattern=.*\S.* />
					<label for="fieldUser" class="label">Create Username</label>
				</div>
				<div class="field">
					<input type="password" id="fieldPassword" class="input" required pattern=.*\S.* />
					<label for="fieldPassword" class="label">Password</label>
				</div>
				<div class="field">
					<input type="password" id="fieldPassword" class="input" required pattern=.*\S.* />
					<label for="fieldPassword" class="label">Re-enter Password</label>
				</div>

			</div>

			<!--end of Register-->

			<div class="profile__footer">
				<button class="btn" onclick="myFunction()">Login</button>
				<button class="btn" onclick="my2Function()" style="padding-left: 25px">Register</button>
			</div>

		</div>
	</div>
</div>




