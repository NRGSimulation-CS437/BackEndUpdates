<script>
	function myFunction() {
		document.getElementsByClassName('profile__fields')[0].style.visibility='visible';
		document.getElementsByClassName('registerForm')[0].style.visibility='hidden';

	}
</script>
<script>
	function my2Function() {
		document.getElementsByClassName('profile__fields')[0].style.visibility='hidden';
		document.getElementsByClassName('registerForm')[0].style.visibility='visible';

	}
</script>

</div>
